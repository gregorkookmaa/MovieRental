@model MovieRental.Models.ViewModels.RentingMovieEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Renting Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="RentingID" class="control-label">Renting</label>
                <select asp-for="RentingID" class="form-control" asp-items="@Model.Rentings"></select>
                <span asp-validation-for="RentingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieID" class="control-label">Movie</label>
                <select asp-for="MovieID" class="form-control" asp-items="@Model.Movies"></select>
                <span asp-validation-for="MovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientRating" class="control-label"></label>
                <select asp-for="ClientRating" class="form-control">
                    <option value="">Select Client Rating</option>
                    <option value="No rating">No rating</option>
                    <option value="⭐">⭐</option>
                    <option value="⭐⭐">⭐⭐</option>
                    <option value="⭐⭐⭐">⭐⭐⭐</option>
                    <option value="⭐⭐⭐⭐">⭐⭐⭐⭐</option>
                    <option value="⭐⭐⭐⭐⭐">⭐⭐⭐⭐⭐</option>
                </select>
                <span asp-validation-for="ClientRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
